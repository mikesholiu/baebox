<div class = "container">
  <div class = "product-container">
  <%= simple_form_for @product do |f| %>
    <%= f.input :handle %>
    <%= f.input :name %>
    <%= f.input :description %>
    
    <% if @product.image.blank? %>
      <%= f.input :image %>
    <% else %>
      <%= image_tag(@product.image) %>
      <%= f.input :image, :as => "hidden" %>
    <% end %>

    <%= f.input :price %>
    
    <%= f.check_box :featured %> Featured
    <div><%= f.button :submit %></div>
  <% end %>
</div>
</div>