<!DOCTYPE html>
<html>
<head>

</head>
<body>

    <section class="instagram-wrap">
      <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="instagram-content">
                    <h3>Available Products</h3>
                <div class="row">
                  <% @products.each do |product| %>
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <div class = "photo-box">
                          <div class = "image-wrap">
                            <%= image_tag(product.image) %>
                          </div>
                          <div class="description">Description: <%= best_in_place product, :description %>
                          <div class="price"> Image Link: <%=  best_in_place product, :image, :display_with => :truncate, :helper_options => { :length => 20 } %>
                          <div class="price">Price: <%= best_in_place product, :price %></div>
                              <div>Feature?: <%= best_in_place product, :featured, as: :checkbox, collection: {false: "No", true: "Yes"} %> </div>
                            </div>
                        </div>
                        </div>
                    </div>
                    <%end %>
                </div>
              </div>
          </div>
        </div>
    </div>
    </section>

    <footer>
    </footer>
    <section class="footer-bottom">
   
    </section>
 
</body>
</html>