<% if current_user %>
  <% if current_user.like?(product) %>
    <%= button_to "Unlike", unlike_path(product_id: product.id), remote: true, class: "unlike-action", "data-product-id": product.id %>
  <% else %>
    <%= button_to "Like", like_path(product_id: product.id), remote: true, class: "like-action", "data-product-id": product.id %>
  <% end %>

<% else %>
  
<% end %>

