<% if current_user %>
  <% if current_user.like?(product) %>
    <%= link_to unlike_path(product_id: product.id), remote: true, class: "unlike-action", "data-product-id": product.id, :method => :post do %><i class="fa fa-heart fa-1"></i><%end%>
  <% else %>
    <%= link_to like_path(product_id: product.id), remote: true, class: "like-action", "data-product-id": product.id,  :method => :post do %><i class="fa fa-heart fa-1"></i><% end %>
  <% end %>

<% else %>
  
<% end %>



