// Step 1: Find the button
// console.log('rendering javascript action, product', $);
var btn = $("input.unlike-action[data-product-id='" + <%= @product.id %> + "']");
// Step 2: Change the button's class (and text)
btn.val('Like');
btn.removeClass('unlike-action');
btn.addClass('like-action');
var parent = btn.parent('form');
parent.attr('action', '/like?product_id=' + <%= @product.id %>);

