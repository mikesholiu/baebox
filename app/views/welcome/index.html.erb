<body>

  <section class ="welcome-text">
    <div class = "container">
      <div class = "row">
        Curated shoppable products on Instagram.
      </div>
    </div>
  </section>

    <section class="instagram-wrap">
      <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="instagram-content">
                    <h3>Featured Items</h3>
                    <div class="row">
                    <% @featured.each do |feature| %>
                      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                          <div class = "photo-box">
                            <div class = "image-wrap">
                              <%= image_tag feature.image %>
                              </div>
                              <div class="description"><%= feature.description %>
                                <div class="price">$<%= feature.price %></div>
                              </div>
                          </div>
                      </div>
                      <%end %>
                  </div>
                </div>
            </div>
        </div>
    </div>
    </section>

    <footer>
